{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "types": ["mocha", "node"]
  },

  "exclude": ["node_modules", "dist", "esm", "gulpfile.ts", "test/**", "mod.ts", "DenoMochaCBOR.ts"]
}
